{
  "name": "ytd",
  "version": "0.0.0-a",
  "description": "Youtube Data API CLI and library for Deno",
  "exports": "./src/mod.ts",
  "fmt": {
    "singleQuote": true
  },

  "imports": {
    "std/": "https://deno.land/std@0.174.0/",
    "wait/": "https://deno.land/x/wait@0.1.12/",
    "cliffy/": "https://deno.land/x/cliffy@v0.25.7/"
  },
  "tasks": {
    "lint": "deno fmt --check",
    "format": "deno fmt",
    "run": "deno run --allow-run --allow-env --allow-read --allow-net src/mod.ts",
    "build": "deno compile --allow-run --allow-env --allow-read --output ytd src/mod.ts && du -h ytd",
    "lock": "deno cache --import-map=deno.json --lock-write src/mod.ts",
    "lock-reload": "deno cache --reload --lock=deno.lock deno.json"
  }
}
